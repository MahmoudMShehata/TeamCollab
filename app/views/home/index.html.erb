<body class="bg-gray-100">
  <div class="container mx-auto py-8">
    <h1 class="text-4xl font-bold mb-4">Welcome to TeamCollabs</h1>
    <p class="text-lg mb-6">A simple and efficient way to manage your tasks and get things done.</p>
    <% if flash[:error] %>
      <p class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <%= flash[:error] %>
      </p>
    <% end %>
    <a href="/users/sign_up" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Get started</a>
    <a href="/users/sign_in" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Sign in</a>
  </div>
</body>
