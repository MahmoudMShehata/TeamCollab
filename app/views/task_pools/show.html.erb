<div class="flex flex-col justify-center items-center">
  <div class="flex flex-row justify-center items space-x-8 w-10/12">
    <div class="flex-1">
      <div class="flex">
        <h2 class="text-xl font-bold mb-4">To Do</h2>
      </div>
      <div class="space-y-4">
        <% @tasks.each do |task| %>
          <% debugger %>
          <% if task.progress == "to_do" %>
            <div class="border-2 border-red-500 p-4 rounded-md">
              <h3 class="text-lg text-black font-bold mb-2"><%= task.title.capitalize %></h3>
              <div class="flex justify-between w-7/12">
                <p class="text-blue-500 font-bold whitespace-nowrap">Task Type: </p>
                <p class="text-md ml-2 font-semibold"><%= task.type %></p>
              </div>
              <div class="flex justify-between w-7/12">
                <p class="text-blue-500 font-bold">Deadline: </p>
                <p class="text-md ml-2 font-semibold"><%= task.deadline.strftime("%m-%d") %></p>
              </div>
              <div class="flex">
                <p class="text-blue-500 font-bold">Collaborators: </p>
                <div class="flex flex-col">
                  <% task.users.each do |member| %>
                    <p class="text-md ml-2 font-semibold"><%= member.email %></p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="flex-1">
      <h2 class="text-xl font-bold mb-4">In Progress</h2>
      <div class="space-y-4">
        <% @tasks.each do |task| %>
          <% if task.progress == "in_progress" %>
            <div class="border-2 border-orange-500 p-4 rounded-md">
              <h3 class="text-lg text-black font-bold mb-2"><%= task.title.capitalize %></h3>
              <div class="flex justify-between w-3/4">
                <p class="text-blue-500 font-bold whitespace-nowrap">Task Type: </p>
                <p class="text-md ml-2 font-semibold"><%= task.type %></p>
              </div>
              <div class="flex justify-between w-7/12">
                <p class="text-blue-500 font-bold">Deadline: </p>
                <p class="text-md ml-2 font-semibold"><%= task.deadline.strftime("%m-%d") %></p>
              </div>
              <div class="flex">
                <p class="text-blue-500 font-bold">Collaborators: </p>
                <div class="flex flex-col">
                  <% task.users.each do |member| %>
                    <p class="text-md ml-2 font-semibold"><%= member.email %></p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="flex-1">
      <h2 class="text-xl font-bold mb-4">Done</h2>
      <div class="space-y-4">
        <% @tasks.each do |task| %>
          <% if task.progress == "done" %>
            <div class="border-2 border-green-500 p-4 rounded-md">
              <h3 class="text-lg text-black font-bold mb-2"><%= task.title.capitalize %></h3>
              <div class="flex justify-between w-10/12">
                <p class="text-blue-500 font-bold whitespace-nowrap">Task Type: </p>
                <p class="text-md ml-2 font-semibold"><%= task.type %></p>
              </div>
              <div class="flex justify-between w-7/12">
                <p class="text-blue-500 font-bold">Deadline: </p>
                <p class="text-md ml-2 font-semibold"><%= task.deadline.strftime("%m-%d") %></p>
              </div>
              <div class="flex">
                <p class="text-blue-500 font-bold">Collaborators: </p>
                <div class="flex flex-col">
                  <% task.users.each do |member| %>
                    <p class="text-md ml-2 font-semibold"><%= member.email %></p>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if can? :create, Task %>
  <%= link_to 'New Task', tasks_path %>
<% end %>