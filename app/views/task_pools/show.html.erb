                <% end %>
              </div>
            </div>
            <% if owns(task, current_user) %>
              <%= form_for(task, url: task_path(task), method: :put) do |form| %>
                <div class="flex justify-between w-3/4 mt-4">
                  <%= form.label :progress, "Progress:" %>
                  <%= form.select :progress, ["to_do", "in_progress", "done"] %>
                </div>
                <div class="flex justify-end mt-4">
                  <%= form.submit "Update Progress", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                </div>
              <% end %>
            <% end %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
